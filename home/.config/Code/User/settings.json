{
  "update.mode": "manual",
  // Based
  "git.defaultBranchName": "master",
  // Window
  "window.restoreWindows": "none",
  "window.menuBarVisibility": "toggle",
  "window.customTitleBarVisibility": "auto",
  "window.dialogStyle": "custom",
  // Workbench
  "workbench.startupEditor": "newUntitledFile",
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "bottom",
  // Editor
  "editor.rulers": [80],
  "editor.tabSize": 2,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.minimap.enabled": false,
  "editor.inlayHints.enabled": "onUnlessPressed",
  "editor.renderWhitespace": "trailing",
  "editor.formatOnSave": true,
  "editor.autoClosingBrackets": "never",
  "editor.lineNumbers": "relative",
  // Diff Editor
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.colorTheme": "monokai-charcoal (red)",
  // "workbench.preferredDarkColorTheme": "Monokai Pro (Filter Ristretto)",
  "workbench.preferredDarkColorTheme": "monokai-charcoal (red)",
  "workbench.preferredLightColorTheme": "GitHub Light Default",
  "workbench.iconTheme": "material-icon-theme",
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  // Font
  "editor.fontFamily": "Iosevka Comfy, Iosevka, Fira Code, monospace, monospace",
  "editor.fontWeight": "300",
  "editor.fontSize": 14,
  "editor.fontLigatures": true, // --> != <==
  // Zen Mode
  "zenMode.fullScreen": false,
  "zenMode.hideLineNumbers": false,
  "problems.showCurrentInStatus": true,
  "terminal.external.linuxExec": "alacritty",
  "terminal.external.osxExec": "kitty.app",
  "terminal.integrated.fontFamily": "Inconsolata, monospace",
  "terminal.integrated.tabs.enabled": false,
  // Python
  "python.analysis.typeCheckingMode": "strict",
  // Live Share
  "liveshare.allowGuestDebugControl": true,
  "liveshare.allowGuestTaskControl": true,
  "liveshare.languages.allowGuestCommandControl": true,
  // Screencast Mode
  "screencastMode.verticalOffset": 2,
  "screencastMode.fontSize": 32,
  "editor.accessibilitySupport": "off",
  "redhat.telemetry.enabled": false,
  // Spelling
  "cSpell.language": "en,pt-BR",
  "cSpell.userWords": [
    "Addrs",
    "agenix",
    "agicommies",
    "alacritty",
    "ascii",
    "bootnode",
    "bootnodes",
    "bytecode",
    "cachix",
    "camelcase",
    "catthehacker",
    "clippy",
    "CODEOWNERS",
    "communeai",
    "communex",
    "concat",
    "Davi",
    "daviptrs",
    "dbus",
    "ddns",
    "dejavu",
    "deserializable",
    "deserialization",
    "devwckd",
    "direnv",
    "doesnt",
    "dotfiles",
    "dtach",
    "elems",
    "exponentiated",
    "forall",
    "fullnode",
    "hasher",
    "hashrate",
    "homoiconicity",
    "hvac",
    "incentivized",
    "Inconsolata",
    "Iosevka",
    "IPFS",
    "jemalloc",
    "jsonrpsee",
    "justfile",
    "keccak",
    "keymap",
    "killall",
    "kindelia",
    "Kindelia",
    "libclang",
    "libjemalloc",
    "libudev",
    "lmao",
    "localnode",
    "mergeable",
    "modelcontextprotocol",
    "monokai",
    "naersk",
    "Nakamoto",
    "nerdfonts",
    "newtype",
    "nixos",
    "nixpkgs",
    "nonblocking",
    "numtide",
    "nvim",
    "opentofu",
    "oxalica",
    "pacman",
    "pkgs",
    "polkadot",
    "protoc",
    "pydantic",
    "pyright",
    "pytest",
    "redex",
    "redexes",
    "renlabs",
    "reqwest",
    "roadmap",
    "roboto",
    "rocksdb",
    "rustc",
    "rustup",
    "saiintbrisson",
    "SCCACHE",
    "screencast",
    "serde",
    "singlepass",
    "stdenv",
    "steinerkelvin",
    "stringification",
    "stringifier",
    "struct",
    "Supremesource",
    "torusdk",
    "tsafe",
    "typecheck",
    "typeclass",
    "upsert",
    "upserted",
    "upserting",
    "uuid",
    "uuids",
    "vals",
    "venv",
    "wakatime",
    "xflags",
    "xorg",
    "xtask",
    "zoxide",
    "zstd"
  ],
  // File associations
  "files.associations": {
    "*.tf": "tf",
    "*.yml": "yaml",
    "*.hvm": "hvm"
  },
  "vim.easymotion": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>"],
      "commands": ["vspacecode.space"]
    },
    {
      "before": [","],
      "commands": [
        "vspacecode.space",
        {
          "command": "whichkey.triggerKey",
          "args": "m"
        }
      ]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>"],
      "commands": ["vspacecode.space"]
    },
    {
      "before": [","],
      "commands": [
        "vspacecode.space",
        {
          "command": "whichkey.triggerKey",
          "args": "m"
        }
      ]
    }
  ],
  "vspacecode.bindingOverrides": [
    {
      "keys": "k",
      "name": "Kelvin's custom stuff",
      "type": "bindings",
      "bindings": [
        {
          "key": "s",
          "name": "Search",
          "type": "command",
          "command": "actions.find"
        },
        {
          "key": "n",
          "name": "Add cursor selection to next match",
          "type": "command",
          "command": "editor.action.addSelectionToNextFindMatch"
        },
        {
          "key": "u",
          "name": "Cursor undo",
          "type": "command",
          "command": "cursorUndo"
        },
        {
          "key": "f",
          "name": "Quick find file",
          "type": "command",
          "command": "workbench.action.quickOpen"
        },
        {
          "key": "c",
          "name": "Comment",
          "type": "command",
          "command": "editor.action.commentLine"
        }
      ]
    }
  ],
  // lang: Nix
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nil",
  "nix.serverSettings": {
    "nil": {
      "formatting": {
        "command": ["nixpkgs-fmt"]
      }
    }
  },
  // lang: JSON
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // lang: Yaml
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // lang: Markdown
  // "markdown-preview-github-styles.colorTheme": "light",
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // lang: Javascript / Web
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // lang: Rust
  "rust-analyzer.checkOnSave.command": "clippy",
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "//": null,
  "github.copilot.enable": false,
  "supermaven.enable": {
    "*": true
  },
  "markdownlint.config": {
    "no-duplicate-heading": {
      "siblings_only": true
    }
  },
  "tsImportSorter.configuration.autoFormat": "off"
}